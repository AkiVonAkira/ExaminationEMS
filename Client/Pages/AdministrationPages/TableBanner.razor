@using Client.Pages.DepartmentPages

<div class="container mx-auto px-4 mt-4">
    <CardDeck Class="flex-wrap gap-4 !flex-row">
        <Card Border="Border.Primary" Background="Background.Dark" TextColor="TextColor.Light">
            <Button Width="Width.Is100" TextColor="TextColor.Light"><i class="fa fa-user text-primary me-2"></i> Employees</Button>
        </Card>
        <Card Border="Border.Success" Background="Background.Dark" TextColor="TextColor.Light">
            <Button Width="Width.Is100" TextColor="TextColor.Light"><i class="fa fa-sun text-success me-2"></i> Vacation</Button>
        </Card>
        <Card Border="Border.Danger" Background="Background.Dark" TextColor="TextColor.Light">
            <Button Width="Width.Is100" TextColor="TextColor.Light"><i class="fa fa-stopwatch text-danger me-2"></i> Overtime</Button>
        </Card>
        <Card Border="Border.Warning" Background="Background.Dark" TextColor="TextColor.Light">
            <Button Width="Width.Is100" TextColor="TextColor.Light"><i class="fa fa-hospital text-warning me-2"></i> Doctor</Button>
        </Card>
        <Card Border="Border.Dark" Background="Background.Dark" TextColor="TextColor.Light">
            <Button Width="Width.Is100" TextColor="TextColor.Light"><i class="fa-brands fa-slack text-light me-2"></i> Departments</Button>
        </Card>
        
        <GeneralDepartmentPage />
    </CardDeck>
</div>