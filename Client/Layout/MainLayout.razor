@using Client.Pages.ComponentPages
@using Microsoft.AspNetCore.Authorization
@inherits LayoutComponentBase
@attribute [Authorize]

<Layout>
    <LayoutHeader>
        <TopBar />
    </LayoutHeader>
    <Layout Sider>
        <AuthorizeView>
            <Authorized>
                <LayoutSider Fixed>
                    <LayoutSiderContent>
                        <SideBar />
                    </LayoutSiderContent>
                </LayoutSider>
            </Authorized>
        </AuthorizeView>
        <LayoutContent Background="Background.Body" TextColor="TextColor.White">
            @Body
        </LayoutContent>
    </Layout>
</Layout>